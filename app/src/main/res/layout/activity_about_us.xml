                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/txtLop1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
